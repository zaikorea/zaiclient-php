{
    "files.exclude": {
        "**/.git": false,
        "**/.svn": true,
        "**/.hg": true,
        "**/CVS": true,
        "**/.DS_Store": true,
        "**/Thumbs.db": true
    },
    "[php]": {
        "editor.formatOnSave": true,
        "editor.defaultFormatter": "DEVSENSE.phptools-vscode",
    },
    "files.associations": {
        "vendor/**/*": "vendor"
    },
    "[vendor]": {
        "editor.formatOnSave": false
    }
}
